#!/bin/bash

# Set the branch for Omarchy's git repository.

if (($# == 0)); then
  echo "Usage: omarchy-branch-set [master|dev]"
  exit 1
else
  branch="$1"
fi

case "$branch" in
  "master") git -C $OMARCHY_PATH switch master ;;
  "dev") git -C $OMARCHY_PATH switch dev ;;
  *) echo "Unknown branch: $branch"; exit 1; ;;
esac
